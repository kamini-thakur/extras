<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>
<h2>Added images</h2>
<% @product.images.each do |comment| %>
  <p>
    <strong>Image:</strong>
    <%=image_tag comment.image.thumb %>
  </p>
<% end %>


<h2>Add Images</h2>
<%= form_for ([@product, @product.images.build]), html: { multipart: true } do |f| %>
<div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
   
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
